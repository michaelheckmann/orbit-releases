---
import type { HTMLAttributes } from "astro/types";

import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"input"> {
  name: string;
}
const { class: className, ...props } = Astro.props;
---

<input
  {...props}
  class={cn(
    "h-10 min-w-72 rounded-lg border-[1px] border-neutral-700 bg-neutral-900 px-4 text-sm shadow-sm placeholder:text-neutral-400",
    "outline-none focus-visible:border-neutral-100",
    "ease-snappy transition-colors duration-200",
    className,
  )}
/>
