---
import type { HTMLAttributes } from "astro/types";

import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"input"> {
  name: string;
}
const { class: className, ...props } = Astro.props;
---

<input
  class={cn(
    "h-10 min-w-72 rounded-lg border border-neutral-800 bg-neutral-900 bg-clip-padding px-4 shadow-sm placeholder:text-neutral-600",
    "text-base sm:text-sm",
    "outline-none focus-visible:border-neutral-500",
    "disabled:cursor-not-allowed disabled:border-neutral-900 disabled:text-neutral-600",
    "ease-snappy transition-colors duration-200",
    className,
  )}
  {...props}
/>
