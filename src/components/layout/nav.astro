---
import { cn } from "@/lib/utils";

const navItems = [
  { label: "Product", href: "/#product" },
  { label: "Privacy", href: "/#privacy" },
  { label: "Waitlist", href: "/#waitlist" },
  { label: "FAQ", href: "/#faq" },
];
---

<nav>
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a
          href="/"
          class={cn(
            "ca-0.5 font-mono text-lg text-neutral-400 uppercase",
            "ease-snappy transition-[text-shadow,color] duration-300",
            "hover:ca-1 hover:text-neutral-200",
            "-ml-2 rounded-md px-2 ring-neutral-100 outline-none focus-visible:text-neutral-100 focus-visible:ring-1",
          )}
        >
          Orbit
        </a>
      </div>
      <div class="hidden sm:block">
        <div class="flex items-center space-x-6">
          {
            navItems.map(({ label, href }) => (
              <a
                href={href}
                class={cn(
                  "text-sm text-neutral-400",
                  "ease-snappy transition-colors duration-200",
                  "hover:text-neutral-200",
                  "-ml-2 rounded-md px-2 py-1 ring-neutral-100 outline-none focus-visible:text-neutral-100 focus-visible:ring-1",
                )}
              >
                {label}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</nav>
