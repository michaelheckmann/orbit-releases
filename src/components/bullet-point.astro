---
import Image from "astro/components/Image.astro";

interface Props {
  image: ImageMetadata;
  alt: string;
  title: string;
  description: string;
}
---

<li class="max-w-md space-y-2">
  <div class="flex items-center gap-3">
    <div class="size-7 rounded-lg">
      <Image src={Astro.props.image} alt={Astro.props.alt} layout="fixed" />
    </div>
    <h3 class="text-neutral-100">{Astro.props.title}</h3>
  </div>
  <p class="text-pretty">
    {Astro.props.description}
  </p>
</li>
