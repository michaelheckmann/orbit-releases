---
import { Image } from "astro:assets";

import { cn } from "@/lib/utils";
import staticNoise from "@/assets/static.png";
---

<style>
  @keyframes staticFlicker {
    0% {
      opacity: 0.02;
    }
    25% {
      opacity: 0.035;
    }
    50% {
      opacity: 0.04;
    }
    75% {
      opacity: 0.025;
    }
    100% {
      opacity: 0.03;
    }
  }

  .static-animation {
    animation: staticFlicker 2s infinite ease-in-out alternate;
  }
</style>
<div class="motion-opacity-in-0 motion-duration-[10s]">
  <Image
    src={staticNoise}
    alt="Noise"
    layout="full-width"
    class={cn(
      "absolute inset-0 h-screen w-screen object-cover",
      "static-animation pointer-events-none",
      "mask-b-from-70%",
    )}
  />
</div>
