---
import type { HTMLAttributes } from "astro/types";

import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"button"> {
  text?: string;
}

const { class: className, ...props } = Astro.props;
---

<button
  {...props}
  class={cn(
    "group relative h-10 cursor-pointer rounded-lg border border-neutral-800 bg-clip-padding px-7",
    "text-sm text-shadow-sm",
    "shadow-xs inset-shadow-sm inset-shadow-white/2",
    "bg-neutral-850",
    "hover:bg-neutral-800",
    "active:scale-[98%]",
    "disabled:cursor-not-allowed disabled:border-neutral-900 disabled:bg-neutral-900 disabled:text-neutral-600",
    "outline-none focus-visible:border-neutral-500",
    "ease-snappy transition-[transform,colors] duration-200",
    className,
  )}
>
  {Astro.props.text}
  <slot />
</button>
