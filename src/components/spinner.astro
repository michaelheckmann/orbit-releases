---
interface Props {
  strokeWidth?: number;
  class?: string;
}

const strokeWidth = Astro.props.strokeWidth ?? 60;
const r = 400 - strokeWidth;
---

<svg
  viewBox="0 0 800 800"
  xmlns="http://www.w3.org/2000/svg"
  class={Astro.props.class}
>
  <circle
    class="origin-center animate-spin"
    style="transform-origin: 400px 400px"
    cx="400"
    cy="400"
    r={r}
    stroke-width={strokeWidth}
    stroke-dasharray={`${0.5 * 3.41 * r} ${2 * 3.41 * r}`}
    stroke-linecap="round"></circle>
</svg>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin {
    animation: spin 0.9s linear infinite;
  }
</style>
