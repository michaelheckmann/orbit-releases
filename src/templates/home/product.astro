---
import { Image } from "astro:assets";

import { cn } from "@/lib/utils";
import BulletPoint from "@/components/bullet-point.astro";
import Title from "@/components/title.astro";
import fastIcon from "@/assets/fast.png";
import product from "@/assets/feature-1.webp";
import productAlt from "@/assets/feature-2.webp";
import filterIcon from "@/assets/filter.png";
import interactIcon from "@/assets/interact.png";
import performanceIcon from "@/assets/performance.png";
import searchIcon from "@/assets/search.png";
import visualIcon from "@/assets/visual.png";
---

<section
  id="product"
  class={cn("mx-auto max-w-6xl px-6 pt-32", "max-sm:pt-20")}
>
  <Title
    eyebrow="Product"
    title="How it works"
    subtitle="Orbit continuously records your Mac's screen activity in the background, storing everything locally on your device. Search your entire screen history by keyword, app, or time."
  />
  <div
    class={cn(
      "flex w-full items-center justify-between gap-10 pt-24",
      "max-lg:flex-col max-lg:items-start max-lg:gap-16 max-lg:pt-16",
    )}
  >
    <ul
      class={cn(
        "grid w-full shrink-0 grid-cols-1 gap-10",
        "sm:grid-cols-2",
        "lg:w-md lg:grid-cols-1",
      )}
    >
      <BulletPoint
        image={searchIcon}
        alt="An icon of a magnifying glass over a document."
        title="Instant screen history search"
        description="Find anything by searching for text, app name or the time you viewed it."
      />
      <BulletPoint
        image={interactIcon}
        alt="An icon of a computer mouse."
        title="Interactive screen captures"
        description="Copy text, reopen URLs, or save frames as images directly from your recordings."
      />
      <BulletPoint
        image={visualIcon}
        alt="An icon of a camera."
        title="Visual timeline navigation"
        description="Scroll through your screen history with an intuitive timeline. Jump to any date or time instantly."
      />
    </ul>
    <Image
      src={product}
      alt="A screenshot of the 'Orbit' search app interface. The focus is on a command menu that allows the user to search their history."
      layout="full-width"
      class={cn(
        "max-w-2xl min-w-0 shrink rounded-xl shadow-xl",
        "max-lg:w-full max-lg:max-w-none",
      )}
    />
  </div>
  <div
    class={cn(
      "flex w-full items-center justify-between gap-10 pt-24",
      "max-lg:flex-col-reverse max-lg:items-start max-lg:gap-16 max-lg:pt-16",
    )}
  >
    <Image
      src={productAlt}
      alt="A screenshot of the 'Orbit' app featuring a search results interface. The interface displays a list of recorded screen activities related to the search term 'memory'."
      layout="full-width"
      class={cn(
        "max-w-2xl min-w-0 shrink rounded-xl shadow-xl",
        "max-lg:w-full max-lg:max-w-none",
      )}
    />
    <ul
      class={cn(
        "grid w-full shrink-0 grid-cols-1 gap-10",
        "sm:grid-cols-2",
        "lg:w-md lg:grid-cols-1",
      )}
    >
      <BulletPoint
        image={performanceIcon}
        alt="An icon of a battery."
        title="Minimal resource usage"
        description="Orbit continuously records your screen without impacting performance, using optimized storage and high compression."
      />
      <BulletPoint
        image={filterIcon}
        alt="An icon of a cube."
        title="Import from Rewind"
        description="Seamlessly migrate your existing Rewind data and continue your screen history without gaps."
      />
      <BulletPoint
        image={fastIcon}
        alt="An icon of a bolt."
        title="Fast retrieval at scale"
        description="Built for speed and reliability, Orbit is designed to instantly retrieve information from months or even years of recordings."
      />
    </ul>
  </div>
</section>
